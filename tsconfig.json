{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "@actions": ["reducer/actions"],
      "@common": ["components/common/"],
      "@*": ["*/"]
    }
  }
}
